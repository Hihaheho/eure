// TOML data types conversion tests

@ cases.positive_integers {
  input_toml = ```toml
a = 42
b = 1_000_000
```

  // Note: underscores are removed in the semantic representation
  input_eure = ```eure
a = 42
b = 1000000
```
}

@ cases.positive_floats {
  input_toml = ```toml
a = 3.14
b = 1.0e10
```

  // Note: scientific notation is expanded, but type preserved as F64
  input_eure = ```eure
a = 3.14
b = 10000000000.0
```
}

@ cases.booleans {
  input_toml = ```toml
enabled = true
disabled = false
```

  input_eure = ```eure
enabled = true
disabled = false
```
}

@ cases.strings {
  input_toml = ```toml
name = "hello world"
path = "C:\\Users\\name"
```

  input_eure = ```eure
name = "hello world"
path = "C:\\Users\\name"
```
}

@ cases.inline_table {
  input_toml = ```toml
point = { x = 1 }
```

  // Note: using single key to avoid map ordering issues
  input_eure = ```eure
point = { x => 1 }
```
}

@ cases.inline_array {
  input_toml = ```toml
colors = ["red", "green", "blue"]
```

  input_eure = ```eure
colors = ["red", "green", "blue"]
```
}
