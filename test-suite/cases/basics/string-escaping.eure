// === Unicode and other escapes ===

@ cases.unicode-escape
input_eure = ```eure
hello = "Hello \u{4e16}\u{754c}"
```

normalized = ```eure
= { hello => "Hello 世界" }
```

@ cases.all-escapes
input_eure = ```eure
escaped = "tab:\there\nnull:\0end"
```

normalized = ```eure
= { escaped => "tab:\there\nnull:\0end" }
```

// === String continuation ===

@ cases.continuation-same-type
input_eure = ```eure
long = "hello " \
  "world"
```

normalized = ```eure
= { long => "hello world" }
```

@ cases.continuation-mixed-types
input_eure = ```eure
mixed = "escaped\n" \
  'literal\n'
```

normalized = ```eure
= { mixed => "escaped\nliteral\\n" }
```

// === Keys: Escaped vs Literal ===

@ cases.keys-escaped
input_eure = ```eure
"C:\\path" = 1
```

normalized = ```eure
= { "C:\\path" => 1 }
```

@ cases.keys-literal
input_eure = ```eure
'C:\path' = 1
```

normalized = ```eure
= { "C:\\path" => 1 }
```
