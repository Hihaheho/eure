// Test: String escaping - Str vs LitStr comparison
// Each case shows BOTH escaped and literal side-by-side

// === Level 0: Str vs LitStr ===

@ cases.level0-newline
input_eure = ```eure
escaped = "line1\nline2"
literal = 'line1\nline2'
```

normalized = ```eure
= { escaped => "line1\nline2", literal => "line1\\nline2" }
```

@ cases.level0-backslash
input_eure = ```eure
escaped = "C:\\Users\\name"
literal = 'C:\Users\name'
```

normalized = ```eure
= { escaped => "C:\\Users\\name", literal => "C:\\Users\\name" }
```

@ cases.level0-tab
input_eure = ```eure
escaped = "col1\tcol2"
literal = 'col1\tcol2'
```

normalized = ```eure
= { escaped => "col1\tcol2", literal => "col1\\tcol2" }
```

// === Level 1: LitStr1 (delimited literal strings) ===

@ cases.level1-backslash
input_eure = ```eure
literal = <'C:\Users\name'>
```

normalized = ```eure
= { literal => "C:\\Users\\name" }
```

@ cases.level1-embedded-quotes
input_eure = ```eure
literal = <'it's working'>
```

normalized = ```eure
= { literal => "it's working" }
```

@ cases.level1-consecutive-quotes
input_eure = ```eure
literal = <'a''b'>
```

normalized = ```eure
= { literal => "a''b" }
```

// === Level 2: LitStr2 (double-delimited literal strings) ===

@ cases.level2-backslash
input_eure = ```eure
literal = <<'C:\Users\name'>>
```

normalized = ```eure
= { literal => "C:\\Users\\name" }
```

@ cases.level2-partial-close
input_eure = ```eure
literal = <<'text with '> inside'>>
```

normalized = ```eure
= { literal => "text with '> inside" }
```

@ cases.level2-consecutive-quotes
input_eure = ```eure
literal = <<'a''b'>>
```

normalized = ```eure
= { literal => "a''b" }
```

// === Level 3: LitStr3 (triple-delimited literal strings) ===

@ cases.level3-backslash
input_eure = ```eure
literal = <<<'C:\Users\name'>>>
```

normalized = ```eure
= { literal => "C:\\Users\\name" }
```

@ cases.level3-complex-partial
input_eure = ```eure
literal = <<<'text with ''>> inside'>>>
```

normalized = ```eure
= { literal => "text with ''>> inside" }
```

@ cases.level3-consecutive-quotes
input_eure = ```eure
literal = <<<'a''b'>>>
```

normalized = ```eure
= { literal => "a''b" }
```

// === Unicode and other escapes ===

@ cases.unicode-escape
input_eure = ```eure
hello = "Hello \u{4e16}\u{754c}"
```

normalized = ```eure
= { hello => "Hello 世界" }
```

@ cases.all-escapes
input_eure = ```eure
escaped = "tab:\there\nnull:\0end"
```

normalized = ```eure
= { escaped => "tab:\there\nnull:\0end" }
```

// === String continuation ===

@ cases.continuation-same-type
input_eure = ```eure
long = "hello " \
  "world"
```

normalized = ```eure
= { long => "hello world" }
```

@ cases.continuation-mixed-types
input_eure = ```eure
mixed = "escaped\n" \
  'literal\n'
```

normalized = ```eure
= { mixed => "escaped\nliteral\\n" }
```

// === Keys: Escaped vs Literal ===

@ cases.keys-escaped
input_eure = ```eure
"C:\\path" = 1
```

normalized = ```eure
= { "C:\\path" => 1 }
```

@ cases.keys-literal
input_eure = ```eure
'C:\path' = 1
```

normalized = ```eure
= { "C:\\path" => 1 }
```
