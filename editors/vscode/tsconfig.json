{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "ES2021",
    "outDir": "out",
    "lib": [
      "ES2021"
    ],
    "sourceMap": true,
    "rootDir": ".",
    "verbatimModuleSyntax": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "pkg"
  ]
}
