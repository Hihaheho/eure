{
  "name": "eurels",
  "displayName": "Eure",
  "description": "Eure Language Server extension for Visual Studio Code",
  "homepage": "https://eure.dev",
  "icon": "assets/icons/eure-icon.png",
  "version": "0.1.6",
  "categories": [
    "Programming Languages",
    "Formatters",
    "Linters"
  ],
  "main": "out/node/main.js",
  "browser": "out/browser/main.js",
  "publisher": "hihaheho",
  "scripts": {
    "package": "pnpm run build-wasm && pnpm run build && vsce package --no-dependencies -o eurels.vsix",
    "build-wasm": "cd ../../crates/eure-ls && wasm-pack build --target web --out-dir ../../editors/vscode/pkg --release",
    "build-node": "esbuild ./src/node/main.ts --bundle --outfile=out/node/main.js --external:vscode --format=cjs --platform=node --target=node18",
    "build-browser": "esbuild ./src/browser/main.ts --bundle --outfile=out/browser/main.js --external:vscode --format=cjs --platform=browser",
    "build-ts": "cp -r ../../assets/icons assets/ && pnpm run build-node && pnpm run build-browser",
    "build": "pnpm run build-ts --sourcemap",
    "watch": "pnpm run build-node --sourcemap --watch"
  },
  "files": [
    "out/**/*",
    "pkg/eure_ls_bg.wasm",
    "pkg/eure_ls.js",
    "pkg/eure_ls.d.ts",
    "assets/**/*",
    "syntaxes/**/*",
    "language-configuration.json",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hihaheho/eure.git"
  },
  "keywords": [
    "eure"
  ],
  "author": "Ryo Hirayama",
  "license": "MIT OR Apache-2.0",
  "bugs": {
    "url": "https://github.com/Hihaheho/eure/issues"
  },
  "dependencies": {
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageclient": "10.0.0-next.12"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0",
    "@types/node": "^25.0",
    "@types/vscode": "^1.92.0",
    "@vscode/vsce": "^3.7",
    "esbuild": "^0.27",
    "typescript": "^5.9"
  },
  "contributes": {
    "configuration": {
      "title": "EureLS",
      "properties": {
        "eure.useWasm": {
          "type": "boolean",
          "default": true,
          "description": "Use WASM-based language server. Set to false to use native binary."
        },
        "eure.path": {
          "type": "string",
          "default": "",
          "description": "Path to the native eure-ls binary. If empty, searches PATH for 'eurels'."
        },
        "eure.schema.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable schema validation for Eure files"
        },
        "eure.schema.searchPaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional paths to search for schema files"
        },
        "eure.schema.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Treat schema validation warnings as errors"
        }
      }
    },
    "commands": [
      {
        "command": "eure-ls.start",
        "title": "Start eure-ls"
      },
      {
        "command": "eure-ls.stop",
        "title": "Stop eure-ls"
      },
      {
        "command": "eure-ls.restart",
        "title": "Restart eure-ls"
      },
      {
        "command": "eure.validateWithSchema",
        "title": "Eure: Validate current file with schema"
      },
      {
        "command": "eure.selectSchema",
        "title": "Eure: Select schema for current file"
      }
    ],
    "languages": [
      {
        "id": "eure",
        "extensions": [
          ".eure"
        ],
        "aliases": [
          "Eure",
          "eure"
        ],
        "filenames": [],
        "configuration": "language-configuration.json",
        "icon": {
          "light": "assets/icons/eure-icon.svg",
          "dark": "assets/icons/eure-icon.svg"
        }
      }
    ],
    "grammars": [
      {
        "language": "eure",
        "scopeName": "source.eure",
        "path": "./syntaxes/eure.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.rust": "rust",
          "meta.embedded.block.json": "json",
          "meta.embedded.block.yaml": "yaml",
          "meta.embedded.block.toml": "toml",
          "meta.embedded.block.javascript": "javascript",
          "meta.embedded.block.typescript": "typescript",
          "meta.embedded.block.python": "python",
          "meta.embedded.block.html": "html",
          "meta.embedded.block.css": "css",
          "meta.embedded.block.sql": "sql",
          "meta.embedded.block.markdown": "markdown",
          "meta.embedded.block.shellscript": "shellscript",
          "meta.embedded.block.eure": "eure",
          "meta.embedded.inline.rust": "rust",
          "meta.embedded.inline.json": "json",
          "meta.embedded.inline.yaml": "yaml",
          "meta.embedded.inline.toml": "toml",
          "meta.embedded.inline.javascript": "javascript",
          "meta.embedded.inline.typescript": "typescript",
          "meta.embedded.inline.python": "python",
          "meta.embedded.inline.html": "html",
          "meta.embedded.inline.css": "css",
          "meta.embedded.inline.sql": "sql",
          "meta.embedded.inline.markdown": "markdown",
          "meta.embedded.inline.shellscript": "shellscript",
          "meta.embedded.inline.eure": "eure"
        }
      }
    ]
  }
}
