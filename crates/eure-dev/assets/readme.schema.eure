/// Schema for the Eure landing page data (readme.eure)
@ name
value = `text`
pronunciation = `text`
pronunciation.$optional = true
note = `text`
note.$optional = true
origin = `text`
origin.$optional = true

github = `text.url`
github.$optional = true
version = `text`

tagline = `text`

description = `text`

@ status
$optional = true
phase = `text`

@ features
$variant: array
item = `$types.feature`

@ credits
$variant: array
$optional = true
item = `$types.credit`

/// Credit entry for acknowledging libraries, tools, and inspirations.
@ $types.credit
name = `text`
url = `text.url`
description = `text`

/// Feature with status variants demonstrating algebraic data types.
/// Each variant has different fields based on completion status.
@ $types.feature {
  $variant: union

  /// Completed feature - basic info only
  @variants.done
  title = `text`
  icon = `text`
  description = `text`

  /// Work in progress - includes current milestone
  @variants.in-progress
  title = `text`
  icon = `text`
  description = `text`
  milestone = `text`

  /// Planned feature - includes target version
  @variants.planned
  title = `text`
  icon = `text`
  description = `text`
  target = `text`
}
