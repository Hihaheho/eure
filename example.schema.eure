$schema = "assets/eure-schema.schema.eure"

$types.Action {
  @ $variants.set-text {
    speaker = .text
    lines.$array = .text
    code1 = .text.rust
    code2 = .text.rust
  }
  @ $variants.set-choices {
    description = .text
  }
  @ $variants.set-choices.choice.$array {
    text = .text
    value = .text
  }
}

@ script
id.$type = .text
description.$type = .text
description.$optional = true
actions.$array = .$types.Action
